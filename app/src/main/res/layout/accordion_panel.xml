<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/accordion_panel_header"
        android:background="@color/colorSecondaryAccent"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/accordion_panel_header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/accordion_panel_arrow"
            android:contentDescription="@string/toggle"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@mipmap/ic_arrow_drop_down_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- Panel Container -->
    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/accordion_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>